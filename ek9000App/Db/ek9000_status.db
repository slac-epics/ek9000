{
	field(INP,"@device=$(EK9K),type=ebusStatus")
	field(SCAN,"I/O Intr")
	field(LOLO, 0)
	field(LOW, 0)
	field(LSV, "MAJOR")
	field(LLSV, "MAJOR")
	field(DTYP, "EK9000ConfigRO")
}

