# Various status PVs for the EK9k
#

record(longin,"$(EK9K):AnalogOutputSize")
{
	field(PINI,"YES")
	field(EGU, "bytes")
	field(INP, "@device=$(EK9K),type=analogOutputs")
	field(DTYP, "EK9000ConfigRO")
}

